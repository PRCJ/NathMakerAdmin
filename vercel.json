{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/admin/(.*)", "dest": "api/index.py" },
    { "src": "/products(.*)", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "outputDirectory": "frontend/build/vercel-dist",
  "buildCommand": "./gradlew :frontend:prepareVercelDist"
}
